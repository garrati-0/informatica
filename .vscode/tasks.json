{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc compila il file attivo",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"*.c",
				"*.h",
				//"${fileDirname}/*.c",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.out"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"isDefault": true,
			"kind": "build"
			},
			"detail": "compilatore: /usr/bin/gcc"
		}
	]
}
